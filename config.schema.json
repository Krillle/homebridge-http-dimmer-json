{
  "type": "object",
  "required": ["name", "onUrl", "offUrl"],
  "properties": {
    "name": {
      "title": "Accessory Name",
      "type": "string",
      "placeholder": "Bathroom Mirror"
    },

    "onUrl": {
      "title": "ON URL",
      "type": "string",
      "placeholder": "http://device/rpc/Light.Set?id=3&on=true"
    },

    "offUrl": {
      "title": "OFF URL",
      "type": "string",
      "placeholder": "http://device/rpc/Light.Set?id=3&on=false"
    },

    "statusUrl": {
      "title": "Status URL",
      "type": "string",
      "description": "URL returning JSON status"
    },

    "onJsonPath": {
      "title": "ON JSON Path",
      "type": "string",
      "default": "$.on"
    },

    "setBrightnessUrl": {
      "title": "Set Brightness URL",
      "type": "string",
      "description": "Brightness value (0â€“100) is appended"
    },

    "getBrightnessUrl": {
      "title": "Get Brightness URL",
      "type": "string"
    },

    "brightnessJsonPath": {
      "title": "Brightness JSON Path",
      "type": "string",
      "default": "$.brightness"
    },

    "timeoutMs": {
      "title": "HTTP Timeout (ms)",
      "type": "integer",
      "default": 4000,
      "minimum": 500,
      "maximum": 20000
    }
  }
}